#!/bin/bash

for room in $(ls /var/www/{{ my_fqdn }}/app/rooms/);do
  /usr/bin/rm -v -rf /var/www/{{ my_fqdn }}/app/rooms/$room
done

for site in $(ls /etc/nginx/sites-enabled/ | egrep "*.{{ my_fqdn }}");do
  /usr/bin/rm -v -f /etc/nginx/sites-enabled/$site
done

/usr/bin/systemctl reload nginx
