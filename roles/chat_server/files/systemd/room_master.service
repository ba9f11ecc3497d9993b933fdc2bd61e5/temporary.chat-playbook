[Unit]
Description=room-master service
After=syslog.target network.target

[Service]
Type=simple
User=root
ExecStart=/usr/bin/bash /root/room-master.sh
ExecStop=/usr/bin/kill -9 $(/usr/bin/ps aux | /usr/bin/egrep "*room-master.sh" | /usr/bin/grep -v grep | /usr/bin/awk '{print $2}')

[Install]
WantedBy=multi-user.target
